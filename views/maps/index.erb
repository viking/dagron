<h1>Maps</h1>

<ul>
<% @maps.each do |map| %>
  <li><a href="/maps/<%= map.id %>"><%= map.name %></a> [<a class="delete" href="/maps/<%= map.id %>/delete">delete</a>]</li>
<% end %>
</ul>

<form action="/maps" method="post">
  <h2>Create map:</h2>
  <p>
    <label>Name: <input type="text" name="map[name]" /></label>
  </p>
  <p>
    <input type="submit" />
  </p>
</form>

<script type="text/javascript">
  $(function() {
    $('a.delete').click(function(e) {
      e.preventDefault();
      if (confirm("Are you sure?")) {
        var form = $('<form method="post"></form>');
        form.attr('action', $(this).attr('href'));
        form.submit();
      }
    });
  });
</script>
