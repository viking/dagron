<h1>Map: <%= @map.name %></h1>

<h2>Actions</h2>
<ul>
  <li><a href="/maps/<%= @map.id %>/manage">Manage</a></li>
  <li><a href="/maps/<%= @map.id %>/presentation">Presentation</a></li>
</ul>

<h2>Images</h2>
<ul>
<% @images.each do |image| %>
  <li><a href="/maps/<%= @map.id %>/images/<%= image.id %>"><%= image.name %></a></li>
<% end %>
</ul>

<form class="new-image" action="/maps/<%= @map.id %>/images" method="post" enctype="multipart/form-data">
  <h3>Upload image:</h3>
  <p>
    <label>Name: <input type="text" name="name" /></label>
  </p>
  <p>
    <label>File: <input type="file" name="data" /></label>
  </p>
  <p>
    <input type="submit" />
  </p>
</form>
